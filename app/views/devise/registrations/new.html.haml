.account-page
  .account-page__title
    %h1
      %span.char1み
      %span.char2え
      %span.char3る
      %span.char4か
      %span.char5い
      %span.char6ご
      %span.char7へ
      %span.char8よ
      %span.char9う
      %span.char10こ
      %span.char11そ
      %span.char12！
  .account-page__inner.clearfix
    .account-page__inner--left.account-page__header
      %h2 新規アカウント作成
      = render "devise/shared/links"
    .account-page__inner--right.user-form
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          .field-label
            = f.label :名前
          .field-input
            = f.text_field :name, autofocus: true
        .field
          .field-label
            = f.label :電話番号
          .field-input
            = f.text_field :tel  
        .field
          .field-label
            = f.label :メールアドレス
          .field-input
            = f.email_field :email
        .field
          .field-label
            = f.label :施設名
            %i (ご家族の方は入力しないでください)
          .field-input
            = f.text_field :Facility   
        .field
          .field-label
            = f.label :住所
          .field-input
            = f.text_field :address
        .field
          .field-label
            = f.label :パスワード
            %i (英数字8文字以上)
          .field-input
            = f.password_field :password, autocomplete: "off"
        .field
          .field-label
            = f.label :パスワード
            %i（確認用）
          .field-input
            = f.password_field :password_confirmation, autocomplete: "off"
        .actions
          = f.submit "登録", class: 'btn'
