=form_for @group do |f|
  = f.text_field :name, class: "chat-group-form__input", placeholder: "利用者様の名前を入力してください"
  = f.text_field :age, class: "chat-group-form__input", placeholder: "年齢を入録してください"
  = f.text_field :height, class: "chat-group-form__input", placeholder: "身長を入録してください"
  = f.text_field :weight, class: "chat-group-form__input", placeholder: "体重を入録してください"
  = f.collection_check_boxes :user_ids, User.all, :id, :name
  = f.submit "Save", class: "chat-group-form__action-btn"